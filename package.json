{
  "name": "so-fetch-js",
  "version": "0.3.0",
  "description": "A nice wrapper around the fetch API with some extras",
  "main": "lib/so-fetch.js",
  "module": "lib/so-fetch.esm.js",
  "author": "Jack Franklin",
  "license": "MIT",
  "scripts": {
    "test": "yarn run prettier:check:all && NODE_ENV=test yarn run jest",
    "test:watch": "jest --watch",
    "compile": "tsc -p .",
    "prepublishOnly": "yarn test && yarn run compile",
    "prettier:check:all": "prettier -l 'src/**/*.ts'"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "setupTestFrameworkScriptFile": "./test-setup.ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/fetch-mock": "^6.0.1",
    "@types/jest": "^22.2.2",
    "fetch-mock": "6.3.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "22.4.3",
    "prettier": "1.11.1",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "whatwg-fetch": "2.0.3"
  }
}
