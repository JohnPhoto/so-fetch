{
  "extends": [
    "standard",
    "prettier"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "it": true,
    "expect": true,
    "describe": true,
    "jest": true,
    "fail": true
  },
  "rules": {
    "semi": ["error", "never"],
    "space-before-function-paren": [ "error", "never" ],
    "comma-dangle": ["error", "always-multiline"],
    "prettier/prettier": ["error", { "singleQuote": true, "trailingComma": "es5", "semi": false }]
  },
  "plugins": [
    "prettier",
  ]
}
